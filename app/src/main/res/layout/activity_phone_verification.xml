<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneVerification"
    android:background="@color/blue">

    <ImageButton
        android:id="@+id/phone_verify_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back_36"
        android:background="@android:color/transparent"
        android:layout_marginTop="8dp"
        android:tint="@color/white"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/sent_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We sent you an SMS code"
        android:textColor="@color/white"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_verify_back"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"/>

    <LinearLayout
        android:id="@+id/code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/guide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginHorizontal="32dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <EditText
                android:id="@+id/verify1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                android:maxLength="1"
                android:nextFocusUp="@id/verify2"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:hint="0"
                android:cursorVisible="false"
                android:textColorHint="@color/darkGrey"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@null"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <EditText
                android:id="@+id/verify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                android:maxLength="1"
                android:nextFocusDown="@id/verify1"
                android:nextFocusUp="@id/verify3"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:cursorVisible="false"
                android:hint="0"
                android:textColorHint="@color/darkGrey"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@null"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <EditText
                android:id="@+id/verify3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                android:maxLength="1"
                android:nextFocusDown="@id/verify2"
                android:nextFocusUp="@id/verify4"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:cursorVisible="false"
                android:hint="0"
                android:textColorHint="@color/darkGrey"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@null"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <EditText
                android:id="@+id/verify4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                android:maxLength="1"
                android:nextFocusDown="@id/verify3"
                android:nextFocusUp="@id/verify5"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:cursorVisible="false"
                android:hint="0"
                android:textColorHint="@color/darkGrey"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@null"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <EditText
                android:id="@+id/verify5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                android:maxLength="1"
                android:nextFocusDown="@id/verify4"
                android:nextFocusUp="@id/verify6"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:cursorVisible="false"
                android:hint="0"
                android:textColorHint="@color/darkGrey"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@null"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/verify6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                android:maxLength="1"
                android:nextFocusDown="@id/verify5"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:digits="0123456789"
                android:cursorVisible="false"
                android:hint="0"
                android:textColorHint="@color/darkGrey"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="@null"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:id="@+id/no_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code not received?"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/code_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24sp"/>

    <GridLayout
        android:id="@+id/verification_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/guide2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/add1"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="1"/>
        <Button
            android:id="@+id/add2"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="2"/>
        <Button
            android:id="@+id/add3"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="3"/>
        <Button
            android:id="@+id/add4"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="4"/>
        <Button
            android:id="@+id/add5"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="5"/>
        <Button
            android:id="@+id/add6"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="6"/>
        <Button
            android:id="@+id/add7"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="7"/>
        <Button
            android:id="@+id/add8"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="8"/>
        <Button
            android:id="@+id/add9"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="9"/>
        <Button
            android:id="@+id/add0"
            android:textSize="20sp"
            android:stateListAnimator="@null"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"
            android:text="0"/>
        <ImageButton
            android:id="@+id/backspace"
            android:src="@drawable/ic_baseline_backspace_24"
            android:stateListAnimator="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:hapticFeedbackEnabled="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="fill_horizontal"/>

    </GridLayout>

    <FrameLayout
        android:id="@+id/signIn_progressHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="12dp"
        android:background="#90000000">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminate="true"
            android:layout_gravity="center"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>