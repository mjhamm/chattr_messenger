<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Message_app_kotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkGreen</item>
        <item name="colorSecondaryVariant">@color/umber</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
<!--        <item name="navigationIconTint">@color/white</item>-->
<!--        <item name="colorNavigationItem">@color/menu_item_color_state</item>-->
<!--        <item name="colorNavigationItemSelected">@color/white</item>-->
<!--        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>-->
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
    </style>

    <style name="Widget.Custom.NavigationView.Text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>